package cartas;

import java.util.InputMismatchException;
import java.util.Scanner;

/**
 *
 * @author work pc
 */
public class Main {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
      
        Deck deck = new Deck();
        deck.ListCard();

        String repetir;
        do {

            int opc = 8;
            boolean validar = true;

                do{
                System.out.println("Menu");
                System.out.println("1. Mezclar deck");
                System.out.println("2. Elijir una carta");
                System.out.println("3. Carta al azar");
                System.out.println("4. Mano de 5 cartas");
                System.out.println("5. Cambiar cartas");
                System.out.println("6. Salir");

                try {
                    System.out.print("Opcion: ");
                    Scanner scanner = new Scanner(System.in);
                    opc = scanner.nextInt();
                }catch (InputMismatchException e){
                    System.out.println("Solo admite valores numericos");
                }

                if (opc >= 7 || opc <= 0) {
                    System.out.println("Digite un numero entre los rangos correctos");
                    validar = true;
                } else {
                    validar = false;
                }


            } while (validar);


            switch (opc) {
                case 1:
                    System.out.println("1. Mezclar deck");
                    deck.shuffle();

                    break;
                case 2:
                    System.out.println("2. elijir una carta");
                    deck.head();

                    break;
                case 3:
                    System.out.println("3. Carta al azar");
                    deck.pick();

                    break;
                case 4:
                    System.out.println("4. Mano de 5 cartas");
                    deck.hand();

                    break;
                case 5:
                   System.out.println("5. Cambio de cartas");
                    deck.cambio();
                    break;
                    
                case 6:
                    System.exit(0);
                    break;
            }

            Scanner scanner = new Scanner(System.in);
            System.out.println("Â¿Quieres hacer algo mas? (s/n)");
            repetir = scanner.nextLine();
            repetir.toLowerCase();

        } while (repetir.equals("s"));      
    }
    
}
